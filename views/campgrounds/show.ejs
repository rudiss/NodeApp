<% include ../partials/header %>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <p class="lead">Node App</p>
        <div class="list-group">
          <li class="list-group-item active">Info 1</li>
          <li class="list-group-item">Info 2</li>
          <li class="list-group-item">Info 3</li>
        </div>
      </div>
      <div class="col-md-9">
        <div class="img-thumbnail">
          <img class="img-fluid" src="<%= campground.image %>">
          <div class="caption-full">
            <h4 class="float-right">9.00</h4>
            <h4><a href=""><%= campground.name %></a></h4>
            <p>
              <%= campground.description %>
            </p>
            <p><em>Submitted by <%= campground.author.username %></em>
            </p>
            <% if (currentUser && campground.author.id.equals(currentUser._id)){ %>
              <a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-sm btn-outline-warning">Edit</a>
              <form class="delete-form" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-outline-danger">Delete</button>
              </form>
              <% }%>
          </div>

        </div>
        <br>
        <div class="card">
          <div class="card-body">
            <div class="text-md-right">
              <a class="btn btn-outline-primary" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
            </div>
            <hr>
            <% campground.comments.forEach(function(comment){ %>
              <div class="row">
                <div class="col-md-12">
                  <strong><%= comment.author.username %></strong>
                  <span class="float-right">10 days ago</span>
                  <p>
                    <%= comment.text %>
                    <% if (currentUser && comment.author.id.equals(currentUser._id)){ %>

                      <a class="btn btn-sm btn-outline-danger" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                      <!-- change for icon -->
                      <form class="delete-form" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                        <input type="submit" class="btn btn-sm btn-outline-danger" value="Delete" />
                      </form>
                      <% }%>
                      
                  </p>

                </div>
              </div>

              <% }) %>
          </div>
        </div>
        <a href="/campgrounds"> Back </a>
      </div>
    </div>
  </div>
  <br>
  <% include ../partials/footer %>
