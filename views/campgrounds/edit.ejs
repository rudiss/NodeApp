<% include ../partials/header %>

  <div class="container" style="margin-top:5%">
    <div class="row">
      <h1>Edit <%= campground.name %></h1>

      <div style="width:30%; margin: 0 auto">

        <form action="/campgrounds/<%= campground._id %>/?_method=PUT" method="post">
          <div class="form-group">
            <label>Title</label>
            <input type="text" class="form-control" aria-describedby="emailHelp" name="campground[name]" value="<%= campground.name %>">
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>
          <div class="form-group">
            <label for="image">Image</label>
            <%# name="campground[image]" for update route %>
            <input type="text" class="form-control" id="image" name="campground[image]" value="<%= campground.image %>">
          </div>
          <div class="form-group">
            <label for="image">Description</label>
            <textarea type="text" class="form-control" id="description" name="campground[description]"><%= campground.description %></textarea>
          </div>
          <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </form>
        <hr>
        <a href="/campgrounds"> Go back</a>
        <br>
        <center>
          <% include ../partials/footer %>
        </center>
      </div>
    </div>
  </div>
